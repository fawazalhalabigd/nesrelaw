                .button1{

                    width: 80vw; 
                    margin-right: 10vw;
                    margin-left: 10vw;
                    background-color:var(--color3);
                    color:var(--color2);
                    border: 3px transparent solid;
            
                }
                .button1:hover{
                    background-color:var(--color2);
                    color:var(--color1);
                    border: 3px var(--color1) solid;

                }
            </style>
        </form>

