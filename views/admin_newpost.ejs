         <form action="/admin/new/post" method="post" dir="ltr">
            <div class="mb-3 mt-3">
                <label class="form-label" style="font-size: xx-large;">انشر بوست</label><br><br>
                
                <label class="form-label">عنوان البوست</label>
                <input  class="form-control" id="title"  name="title" style="width: 80vw; margin-right: 10vw;margin-left: 10vw;direction: ltr;"> 
                <label class="form-label">نص البوست</label>
                <textarea id="summernote" name="text"></textarea>
                <script>
                $('#summernote').summernote({
                    placeholder: 'اكتب نص المقالة هنا ...',
                    tabsize: 2,
                    height: 500,
                    toolbar: [
                    ['style', ['style']],
                    ['font', ['bold', 'underline', 'clear']],
                    ['color', ['color']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['table', ['table']],
                    ['insert', ['link']],
                    ['view', ['codeview', 'help']]
                    ]
                });
                </script>
            </div>
            <button type="submit" class="btn button1">انشر!</button>
            <br>
            <br>
            <br>
            <u><a href="/admin">عودة ←</a></u>
